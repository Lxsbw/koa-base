    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "koa2-swagger-ui": "^5.0.5",
    "mongoose": "^5.11.10",
    "pug": "^2.0.3",
    "swagger-jsdoc": "^6.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
